<% if presenters.present? %>
  <h2>Member of Collections</h2>

  <% presenters.each_slice(4) do |batch| %>
    <div class="row">
    <% batch.each do |collection| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <img src="<%= collection.thumbnail_path %>" />
          <div class="caption">
            <h3><%= collection.title.first %></h3>
            <p><%= collection.description.first %></p>
            <p>
              <a href="/collections/<%= collection.id %>" class="btn btn-info btn-block">
                View Collection
              </a>
            </p>
          </div>
        </div>
      </div> <%# /col-md-4 %>
    <% end %>
    </div>
  <% end %>
<% end %>

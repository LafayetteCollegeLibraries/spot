<div id="item-feedback-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag polymorphic_url([main_app, presenter, :item_feedback], routing_type: :path), remote: true do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Have feedback for this item?</h4>
        </div>

        <div class="modal-body">
          <div class="alert alert-info">
            <strong><%= presenter.id %></strong> "<%= presenter.title.first %>"
          </div>
          <div class="form-group">
            <label for="item-feedback--name">Your Name</label>
            <input
              class="form-control"
              id="item-feedback--name"
              name="item_feedback[name]"
              value="<%= current_user.name if current_user %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="item-feedback--email">Your Email Address</label>
            <input
              class="form-control"
              id="item-feedback--email"
              name="item_feedback[email]"
              value="<%= current_user.email if current_user %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="item-feedback--comment">Your Comments</label>
            <textarea
              class="item-feedback form-control"
              id="item-feedback--comment"
              name="item_feedback[comment]"
              rows="10"
              required
            ></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

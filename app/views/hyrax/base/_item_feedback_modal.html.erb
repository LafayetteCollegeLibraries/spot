<div id="item-feedback-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with scope: :item_feedback,
                    url: polymorphic_url([main_app, presenter, :item_feedback], routing_type: :path),
                    remote: true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Have feedback for this item?</h4>
        </div>

        <div class="modal-body">
          <%= f.hidden_field :item_id, presenter.id %>
          <%= f.hidden_field :item_title, Array.wrap(presenter.title).first %>

          <div class="form-group">
            <%= f.label :name, 'Your Name' %>
            <%= f.text_field :name, value: (current_user.name if current_user), class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, 'Your Email Address' %>
            <%= f.email_field :email, value: (current_user.email if current_user), class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :comment, 'Your Comments' %>
            <%= f.text_area :comment, class: 'form-control', rows: '10' %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

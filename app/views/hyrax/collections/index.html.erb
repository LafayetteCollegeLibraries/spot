<%# adjusting the per_row variable will resize the width of the various grid values.
    for best results, use 2, 3, or 4 %>
<% provide(:page_title) { t('spot.collection.index.page_title', name: application_name) } %>
<% per_row = 3 %>
<% grid_base = 12 / per_row %>
<% item_wrapper_class = "col-md-#{grid_base}" %>
<% count_wrapper_class = "col-sm-#{12 - grid_base} col-sm-offset-#{grid_base / 2}" %>

<% @collections.each_slice(per_row).each do |collections| %>
<div class="row">
  <% collections.each do |collection| %>
    <%= render 'collection_list_item',
               collection: collection,
               item_wrapper_class: item_wrapper_class,
               count_wrapper_class: count_wrapper_class %>
  <% end %>
</div>
<% end %>

<div class="row record-padding">
  <div class="col-md-12">
    <div class="pagination">
      <%= paginate @response, outer_window: 2, theme: 'blacklight' %>
    </div>
  </div>
</div>
